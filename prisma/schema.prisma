// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  password      String?
  emailVerified DateTime?
  role          UserRole @default(user)
  isAdmin       Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isActive      Boolean  @default(true)
  phone         String?
  lastLogin     DateTime?

  accounts             Account[]
  sessions            Session[]
  suratPernyataan     SuratPernyataan[]
  profile             Profile?
  permohonanAhliWaris PermohonanAhliWaris[]
  documentLogs        DocumentLog[]
}

enum UserRole {
  user
  admin
  super_admin
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PermohonanAhliWaris {
  id                   String   @id @default(cuid())
  userId               String?
  user                 User?    @relation(fields: [userId], references: [id])

  email                String
  nomorTelepon         String?

  namaPemohon          String
  nikPemohon           String
  alamatPemohon        String
  hubunganDenganPewaris String

  namaPewaris          String
  nikPewaris           String
  alamatPewaris        String
  tanggalMeninggal     DateTime

  statusPernikahan     String // menikah_1, menikah_2, cerai
  daftarAhliWaris      Json
  statusPermohonan     StatusPermohonan @default(PENDING)
  catatanAdmin         String?
  
  // Data tambahan untuk PDF generation
  nomorAkteKematian    String?
  tanggalAkteKematian  DateTime?
  tempatLahirPewaris   String?
  tanggalLahirPewaris  DateTime?
  pekerjaanPewaris     String?
  agamaPewaris         String?
  
  // Data pernikahan
  noSuratNikah         String?
  tanggalNikah         DateTime?
  instansiNikah        String? // KUA/Dukcapil
  
  // Relasi dengan SuratPernyataan (one-to-one)
  suratPernyataan      SuratPernyataan? @relation(fields: [suratPernyataanId], references: [id])
  suratPernyataanId    String? @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([statusPermohonan])
  @@index([userId])
  @@index([createdAt])
}

model Profile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  alamat       String?
  nomorTelepon String?
  tanggalLahir DateTime?
  pekerjaan    String?
  agama        String?
  nik          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StatusPermohonan {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  COMPLETED
}

model SuratPernyataan {
  id                String   @id @default(cuid())
  nomorSurat        String   @unique
  tanggalSurat      DateTime @default(now())
  
  // Data Pewaris (structured)
  namaPewaris       String
  namaAyahPewaris   String
  tempatLahirPewaris String
  tanggalLahirPewaris DateTime
  alamatPewaris     String
  rtPewaris         String?
  rwPewaris         String?
  kelurahanPewaris  String   @default("Grogol")
  kecamatanPewaris  String   @default("Grogol Petamburan")
  kotaPewaris       String   @default("Jakarta Barat")
  tempatMeninggal   String?
  tanggalMeninggal  DateTime?
  pekerjaanPewaris  String?
  agamaPewaris      String?
  
  // Data Kematian
  noAkteKematian    String?
  tanggalAkteKematian DateTime?
  instansiAkteKematian String? @default("Dinas Dukcapil Provinsi DKI Jakarta")
  
  // Data Pernikahan
  statusPernikahan  String   // "MENIKAH_1", "MENIKAH_2", "CERAI", "DUDA_JANDA"
  noSuratNikah      String?
  tanggalNikah      DateTime?
  instansiNikah     String?  // KUA/Dukcapil
  
  // Data Ahli Waris (disimpan sebagai JSON untuk fleksibilitas)
  ahliWaris         Json
  
  // Data tambahan untuk PDF
  jumlahAnak        Int      @default(0)
  jumlahIstri       Int      @default(0)
  jumlahSaudara     Int      @default(0)
  jumlahCucu        Int      @default(0)
  
  // Metadata
  kondisi           String   // "kondisi1", "kondisi2", "kondisi3", "kondisi4", "kondisi5", "kondisi6", "kondisi7"
  status            StatusSurat @default(DRAFT)
  catatan           String?
  isGenerated       Boolean  @default(false)
  generatedAt       DateTime?
  downloadCount     Int      @default(0)
  
  // File info
  pdfFileName       String?
  pdfFileSize       Int?
  pdfLastGenerated  DateTime?
  
  // Relasi
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  permohonan        PermohonanAhliWaris?
  documentLogs      DocumentLog[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([nomorSurat])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum StatusSurat {
  DRAFT
  SUBMITTED
  VERIFIED
  APPROVED
  REJECTED
  ARCHIVED
}

model DocumentLog {
  id                String   @id @default(cuid())
  suratPernyataanId String
  suratPernyataan   SuratPernyataan @relation(fields: [suratPernyataanId], references: [id], onDelete: Cascade)
  userId            String?
  user              User?    @relation(fields: [userId], references: [id])
  
  action            DocumentAction
  details           String?
  ipAddress         String?
  userAgent         String?
  metadata          Json?
  
  createdAt         DateTime @default(now())
  
  @@index([suratPernyataanId])
  @@index([action])
  @@index([createdAt])
}

enum DocumentAction {
  CREATE
  UPDATE
  DOWNLOAD
  VIEW
  PRINT
  GENERATE_PDF
  DELETE
  STATUS_CHANGE
}